<h2 class='text-center'>Log in or Sign up</h2>

<div class='bumper-25'></div>

<section>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-form--box'}) do |f| %>

    <div class="login-form--field">
      <%= f.label :name %><br />
      <%= f.email_field :name, autofocus: true %>
    </div>

    <div class="login-form--field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="login-form--field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="login-form--field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="login-form--submit-container">
      <%= f.submit "Log in", class: 'login-form--submit-button' %>
    </div>

    <div class='bumper-25'></div>

    <!-- <%= render "devise/shared/links" %> -->
  <% end %>
</section>

<div class='bumper-50'></div>
<div class='bumper-50'></div>
